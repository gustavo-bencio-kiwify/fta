generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Urgency {
  light
  asap
  turbo
}

enum TaskStatus {
  pending
  done
  overdue
}

enum Recurrence {
  daily
  weekly
  biweekly
  monthly
  quarterly
  semiannual
  annual
  none
}


model Project {
  @@map("projects")
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  tasks       Task[]
}

model Task {
  @@map("tasks")
  id              String      @id @default(uuid())
  title           String
  description     String?

  // quem delegou (Slack)
  delegation      String
  delegationEmail String?

  // responsável (Slack)
  responsible      String
  responsibleEmail String?

  // data (você já tinha)
  term            DateTime?

  // ✅ horário do prazo (ex: "18:30") — opcional
  deadlineTime    String?

  // ✅ novo: status
  status          TaskStatus  @default(pending)

  // ✅ novo: recorrência (opcional)
  recurrence      Recurrence?

  urgency         Urgency
  createdAt       DateTime    @default(now())

  // ✅ novo: vínculo com projeto (opcional)
  projectId       String?
  project         Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)

  carbonCopies    TaskCarbonCopy[]
}

model TaskCarbonCopy {
  @@map("task-carbon-copies")
  id          String   @id @default(uuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  slackUserId String
  email       String?

  createdAt   DateTime @default(now())

  @@unique([taskId, slackUserId])
  @@index([slackUserId])
  @@index([taskId])
}

