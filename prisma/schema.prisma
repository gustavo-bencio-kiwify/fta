generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Urgency {
  light
  asap
  turbo
}

enum TaskStatus {
  pending
  done
  overdue
}

enum Recurrence {
  daily
  weekly
  biweekly
  monthly
  quarterly
  semiannual
  annual
  none
}

enum ProjectStatus {
  active
  concluded
}

model Project {
  @@map("projects")
  id          String        @id @default(uuid())
  name        String
  description String?
  endDate     DateTime?
  createdAt   DateTime      @default(now())

  // ✅ NOVO
  status      ProjectStatus @default(active)
  concludedAt DateTime?

  tasks       Task[]

  members     ProjectMember[]
}

model ProjectMember {
  @@map("project-members")
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  slackUserId String
  email       String?

  createdAt  DateTime @default(now())

  @@unique([projectId, slackUserId])
  @@index([slackUserId])
  @@index([projectId])
}

model Task {
  @@map("tasks")
  id              String      @id @default(uuid())
  title           String
  description     String?

  // quem delegou (Slack)
  delegation      String
  delegationEmail String?

  // responsável (Slack)
  responsible      String
  responsibleEmail String?

  // data
  term            DateTime?

  // horário do prazo (ex: "18:30") — opcional
  deadlineTime    String?

  // status
  status          TaskStatus  @default(pending)

  // recorrência (opcional)
  recurrence      Recurrence?

  urgency         Urgency
  createdAt       DateTime    @default(now())

  // vínculo com projeto (opcional)
  projectId       String?
  project         Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)

  carbonCopies    TaskCarbonCopy[]

  // ✅ NOVO: logs de lembretes (evita duplicar notificações)
  reminders       TaskReminderLog[]

   recurrenceAnchor DateTime?
}

model TaskCarbonCopy {
  @@map("task-carbon-copies")
  id          String   @id @default(uuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  slackUserId String
  email       String?

  createdAt   DateTime @default(now())

  @@unique([taskId, slackUserId])
  @@index([slackUserId])
  @@index([taskId])
}

// ✅ NOVO: log de lembretes enviados
model TaskReminderLog {
  @@map("task-reminder-logs")
  id        String   @id @default(uuid())

  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // data “do lembrete” no fuso SP: "YYYY-MM-DD"
  dateIso   String

  // slot do lembrete: ex "L_10:00", "A_12:00", "T_16:30"
  slot      String

  createdAt DateTime @default(now())

  @@unique([taskId, dateIso, slot])
  @@index([dateIso, slot])
  @@index([taskId])
}
