generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id               String          @id @default(uuid())
  name             String
  description      String?
  endDate          DateTime?
  createdAt        DateTime        @default(now())
  createdBySlackId String?
  status           ProjectStatus   @default(active)
  concludedAt      DateTime?
  members          ProjectMember[]
  tasks            Task[]

  @@index([createdBySlackId])
  @@map("projects")
}

model ProjectMember {
  id          String   @id @default(uuid())
  projectId   String
  slackUserId String
  email       String?
  createdAt   DateTime @default(now())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, slackUserId])
  @@index([slackUserId])
  @@index([projectId])
  @@map("project-members")
}

model Task {
  id                 String            @id @default(uuid())
  title              String
  description        String?
  delegation         String
  delegationEmail    String?
  responsible        String
  responsibleEmail   String?
  term               DateTime?
  deadlineTime       String?
  status             TaskStatus        @default(pending)
  recurrence         Recurrence?
  urgency            Urgency
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @default(now()) @updatedAt
  projectId          String?
  recurrenceAnchor   DateTime?
  dependsOnId        String?
  slackOpenChannelId String?
  slackOpenMessageTs String?
  googleEventId      String?
  googleEventLink    String?
  calendarPrivate    Boolean           @default(false)
  carbonCopies       TaskCarbonCopy[]
  reminders          TaskReminderLog[]
  dependsOn          Task?             @relation("TaskDependsOn", fields: [dependsOnId], references: [id])
  dependents         Task[]            @relation("TaskDependsOn")
  project            Project?          @relation(fields: [projectId], references: [id])

  @@map("tasks")
}

model TaskCarbonCopy {
  id          String   @id @default(uuid())
  taskId      String
  slackUserId String
  email       String?
  createdAt   DateTime @default(now())
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, slackUserId])
  @@index([slackUserId])
  @@index([taskId])
  @@map("task-carbon-copies")
}

model TaskReminderLog {
  id        String   @id @default(uuid())
  taskId    String
  dateIso   String
  slot      String
  createdAt DateTime @default(now())
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, dateIso, slot])
  @@index([dateIso, slot])
  @@index([taskId])
  @@map("task-reminder-logs")
}

model GoogleOAuthToken {
  id           String    @id
  refreshToken String
  accessToken  String?
  scope        String?
  tokenType    String?
  expiryDate   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("google-oauth-tokens")
}

model AdminUser {
  id           String    @id @default(uuid())
  username     String    @unique
  passwordHash String
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  lastLoginAt  DateTime?

  @@index([isActive])
  @@map("admin-users")
}

model Feedback {
  id               String         @id @default(cuid())
  type             FeedbackType
  title            String
  description      String
  status           FeedbackStatus @default(pending)
  createdBySlackId String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([createdAt])
  @@index([status])
  @@index([type])
  @@map("feedbacks")
}

enum Urgency {
  light
  asap
  turbo
}

enum TaskStatus {
  pending
  blocked
  done
  overdue
}

enum Recurrence {
  daily
  weekly
  biweekly
  monthly
  quarterly
  semiannual
  annual
  none
}

enum ProjectStatus {
  active
  concluded
}

enum FeedbackType {
  bug
  suggestion
}

enum FeedbackStatus {
  pending
  wip
  done
  rejected
}
